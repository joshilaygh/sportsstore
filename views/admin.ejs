<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Shop - Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEJwDDRrq0n6cF8dO6Zz8vCkZpum8fD5K1gkPq7YfP5v0dJb7f5I2Z9lwUglr" crossorigin="anonymous">

    <style>
        /* Navigation bar styling */
        .nav-bar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Text-based logo styling */
        .nav-logo {
            font-family: 'Arial', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: blue;
            text-transform: uppercase;
            letter-spacing: 2px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-logo span {
            color: #0275d8;
            /* Highlight color */
        }

        /* Navigation link styling */
        .nav-bar a {
            padding: 10px 15px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .nav-bar a:hover {
            color: #0275d8;
        }

        /* Hamburger menu styling */
        .sports-item-list {
            display: none;
            font-size: 2rem;
            cursor: pointer;
        }

        /* Welcome message styling */
        .welcome-message {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
            margin-right: 15px;
        }

        /* Admin Panel Section Styling */
        .admin-section {
            background-color: #f9f9f9;
        }

        .admin-section h2 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
        }

        /* Centering the table */
        .admin-table-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin-top: 20px;
        }

        .admin-table {
            width: 80%;
        }

        .admin-table th,
        td {
            padding: 10px;
            text-align: left;
        }

        /* Table Image Styling */
        .admin-table img {
            width: 50px;
            height: auto;
            border-radius: 5px;
        }

        /* Add New Button Alignment */
        .add-new-btn {
            align-self: flex-end;
            margin-bottom: 20px;
        }

        /* Responsive navigation for mobile */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
                width: 100%;
                text-align: center;
                position: absolute;
                top: 60px;
                left: 0;
                background-color: #fff;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

            .nav-links a {
                display: block;
                padding: 10px;
            }

            .sports-item-list {
                display: block;
            }

            .nav-links.open {
                display: block;
            }
        }
    </style>
</head>

<body>

    <!-- Navigation bar for text logo and items -->
    <div class="nav-bar">
        <a href="/" class="nav-logo">Sports Shop</a>
        <div class="nav-links">
            <a href="#best-sports-items">Dashboard</a>
            <a href="/register">Logout</a>
        </div>
    </div>

    <!-- Admin Panel Section -->
    <div class="admin-section">
        <div class="admin-table-container">
            <!-- Add New Product Button -->
            <a href="/admin/item" style="padding-top:10px; margin-right:50px;" class="btn-primary mb-3 add-new-btn">Add
                Product</a>

            <!-- product List Caption -->
            <h3>Product List</h3>

            <!-- Table for displaying item items -->
            <table class="table table-bordered admin-table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th colspan="2" scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop to render item items dynamically -->
                    <% items.forEach((product, index)=> { %>
                        <tr>
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td><img src="<%= product.image_url %>" alt="<%= product.name %>"></td>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>$<%= product.price %>
                            </td>
                            <td>
                                <!-- Edit Button -->
                                <a href="/admin/update/<%= product.id %>" style="font-size:12px;">Edit</a>
                                <!-- Delete Button -->
                                <form method="POST" action="/admin/delete/<%= product.id %>" style="display:inline;">
                                    <button type="submit" style="font-size:12px;">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function toggleMenu() {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('open');
        }
    </script>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz4fnFO9gybB/sU2nKpz3qTwKzdfTc2jf6p0txD1fMc4bmDdL/W1LOkhzy"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
        integrity="sha384-cn7l7gDp0eymXxx6nFFigjvlpRJEeZyQwN1NzD6Ddr5i6iW76EXeqoB9U8lW2v1a"
        crossorigin="anonymous"></script>
</body>

</html>